from fpdf import FPDF
import os
from datetime import datetime

def generate_report(phone, message):
    pdf = FPDF()
    pdf.add_page()
    pdf.set_font("Arial", size=14)
    now = datetime.now().strftime("%Y-%m-%d %H:%M:%S")

    pdf.cell(200, 10, txt="CyberHunter Web - بلاغ ابتزاز", ln=True, align="C")
    pdf.ln(10)
    pdf.cell(200, 10, txt=f"🕒 التاريخ والوقت: {now}", ln=True)
    pdf.cell(200, 10, txt=f"📞 الرقم المُبلغ عنه: {phone}", ln=True)
    pdf.multi_cell(0, 10, txt=f"💬 نص الرسالة:\n{message}")

    if not os.path.exists("reports"):
        os.makedirs("reports")

    file_path = f"reports/report_{phone}_{int(datetime.now().timestamp())}.pdf"
    pdf.output(file_path)
    return file_path
